---
import { Icon } from 'astro-icon';

let links = [
  { href: "https://www.instagram.com/empressmatcha", text: "Instagram", icon: "mdi:instagram" },
  { href: "https://empressmatcha.com", text: "Website", icon: "mdi:web" },
  { href: "https://empressmatcha.com/shop", text: "Buy Now", icon: "mdi:cart" },
  { href: "https://empressmatcha.com/events", text: "Upcoming Events", icon: "mdi:calendar" }
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Empress Matcha — Royalty in every cup." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0b1f0a" />
    <title>Empress Matcha</title>
    <link rel="icon" type="image/jpeg" href="/assets/Crown.jpeg" />

    <style>
      /* ── GLOBAL & SAFE-AREA ─────────────────────────────────────────────────*/
      html { height: 100%; background: radial-gradient(circle at top, #0b1f0a, #25512d); }
      body {
        margin: 0;
        padding: env(safe-area-inset-top) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: inherit;
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        color: #e5f7e0;
      }

      /* ── PRELOADER ───────────────────────────────────────────────────────────*/
      @keyframes gradientBG { 0%,100% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } }
      #preloader {
        position: fixed; inset: 0;
        background: linear-gradient(135deg, #0b1f0a, #163a1e, #25512d, #0b1f0a);
        background-size: 300% 300%;
        animation: gradientBG 12s ease infinite;
        display: flex; align-items: center; justify-content: center;
        z-index: 9999; transition: opacity 0.5s ease;
      }
      #preloader.hidden { opacity: 0; pointer-events: none; }
      /* loader logo bumped to 300x300px */
      #preloader img { width: 460px; height: 460px; border-radius: 12px; }

      /* ── CARD ─────────────────────────────────────────────────────────────── */
      .card {
        width: 100%; max-width: 420px;
        background: rgba(20, 40, 30, 0.6);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 24px;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        padding: 3rem 2rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.4);
        text-align: center;
        animation: fadeIn 0.8s cubic-bezier(0.25,0.1,0.25,1) forwards;
      }
      @keyframes fadeIn { from { opacity: 0; transform: translateY(30px) scale(0.98); } to { opacity: 1; transform: translateY(0) scale(1); } }

      .logo { width: 120px; height: 120px; margin: 0 auto 1.2rem; }
      h1 { margin: 0 0 0.6rem; font-size: 2.2rem; color: #c2f0b1; }
      p { margin: 0 0 2rem; font-size: 1rem; color: #d4f5c8; }

      /* ── BUTTONS ─────────────────────────────────────────────────────────── */
      .button-list { display: grid; gap: 1rem; }
      .button-list a {
        display: flex; align-items: center; justify-content: space-between;
        background: rgba(30, 70, 50, 0.4);
        border-radius: 12px; padding: 1.1rem 1.5rem;
        color: #e5f7e0; text-decoration: none;
        font-size: 1rem; font-weight: 500;
        transition: transform 0.2s, box-shadow 0.2s;
        backdrop-filter: blur(6px);
      }
      .button-list a:hover { transform: translateY(-2px); box-shadow: 0 4px 20px rgba(0,0,0,0.3); }
      .button-list a span { display: flex; align-items: center; gap: 0.75rem; }
      .arrow-icon svg { font-size: 1.2em; }

      .footer { margin-top: 2rem; font-size: 0.85rem; opacity: 0.8; }

      @media (max-width: 480px) {
        .card { padding: 2.5rem 1.5rem; }
        h1 { font-size: 1.9rem; }
        .logo { width: 100px; height: 100px; }
      }
    </style>
  </head>

  <body>
    <!-- Preloader -->
    <div id="preloader">
      <img src="/assets/emlogo.png" alt="Empress Matcha Logo" />
    </div>

    <!-- Main Card -->
    <div class="card">
      <img src="/assets/emlogo.png" alt="Empress Matcha Logo" class="logo" loading="lazy" />
      <h1>Empress Matcha</h1>
      <p>Royalty in every cup</p>

      <div class="button-list">
        {links.map(link => (
          <a href={link.href} target="_blank" aria-label={`Open ${link.text}`}>
            <span>
              <Icon name={link.icon} width="22px" height="22px" />
              {link.text}
            </span>
            <span class="arrow-icon">
              <Icon name="mdi:arrow-right" width="22px" height="22px" />
            </span>
          </a>
        ))}
      </div>

      <div class="footer">Empress Matcha © {new Date().getFullYear()}</div>
    </div>

    <!-- Hide preloader after load -->
    <script type="module">
      window.addEventListener('load', () => {
        const pre = document.getElementById('preloader');
        setTimeout(() => {
          pre.classList.add('hidden');
          pre.addEventListener('transitionend', () => pre.remove(), { once: true });
        }, 3000);
      });
    </script>
  </body>
</html>
