---
import { Icon } from 'astro-icon';

let links = [
  { href: "https://www.instagram.com/empressmatcha", text: "Instagram",    icon: "mdi:instagram"   },
  { href: "https://empressmatcha.com",               text: "Website",      icon: "mdi:web"         },
  { href: "https://empressmatcha.com/shop",          text: "Buy Now",      icon: "mdi:cart"        },
  { href: "https://empressmatcha.com/events",        text: "Upcoming Events", icon: "mdi:calendar"  }
];
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Empress Matcha — Royalty in every cup." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#0b1f0a" />
    <title>Empress Matcha</title>
    <link rel="icon" href="/assets/logo.webp" type="image/webp" />

    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      /* ── PRELOADER ─────────────────────────────────────────────────────────── */
      @keyframes gradientBG {
        0%   { background-position: 0% 50%; }
        50%  { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
      #preloader {
        position: fixed;
        inset: 0;
        background: linear-gradient(135deg, #0b1f0a, #163a1e, #25512d, #0b1f0a);
        background-size: 300% 300%;
        animation: gradientBG 12s ease infinite;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition: opacity 0.5s ease;
      }
      #preloader.hidden {
        opacity: 0;
        pointer-events: none;
      }
      #preloader img {
        width: 480px;
        height: 480px;
        border-radius: 12px;
      }

      /* ── GLOBAL BACKGROUND & LAYOUT ────────────────────────────────────────── */
      body {
        background: radial-gradient(circle at top, #0b1f0a, #25512d);
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        color: #e5f7e0;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* ── CARD ─────────────────────────────────────────────────────────────── */
      .card {
        width: 100%;
        max-width: 420px;
        background: rgba(30, 60, 40, 0.4);
        border: 1px solid #1a3d24;
        border-radius: 20px;
        padding: 2.4rem;
        text-align: center;
        box-shadow: 0 16px 48px rgba(0,0,0,0.4);
        animation: fadeIn 0.8s cubic-bezier(0.25,0.1,0.25,1) forwards;
      }
      @keyframes fadeIn {
        0%   { opacity: 0; transform: translateY(30px) scale(0.98); }
        60%  { opacity: 0.7; transform: translateY(-10px) scale(1.02); }
        100% { opacity: 1; transform: translateY(0) scale(1); }
      }

      .logo {
        width: 140px;
        height: 100px;
        margin-bottom: 0rem;
      }
      h1 {
        margin: 0.4rem 0 0.8rem;
        font-size: 2rem;
        font-weight: 700;
        color: #c2f0b1;
      }
      p {
        font-size: 1rem;
        color: #d4f5c8;
        margin-bottom: 2rem;
      }

      /* ── BUTTON LIST ──────────────────────────────────────────────────────── */
      .button-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .button-list a {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: rgba(50, 90, 60, 0.3);
        border: 1px solid #1a3d24;
        padding: 1rem 1.2rem;
        border-radius: 12px;
        color: #e5f7e0;
        text-decoration: none;
        font-size: 1rem;
        transition: transform 0.2s, box-shadow 0.2s, background 0.2s;
        opacity: 0;
        transform: translateY(10px);
        animation: popIn 0.6s ease-out forwards;
      }
      .button-list a:nth-child(1) { animation-delay: 0.2s; }
      .button-list a:nth-child(2) { animation-delay: 0.4s; }
      .button-list a:nth-child(3) { animation-delay: 0.6s; }
      .button-list a:nth-child(4) { animation-delay: 0.8s; }
      @keyframes popIn {
        to { opacity: 1; transform: translateY(0); }
      }
      .button-list a:hover {
        background: rgba(50, 90, 60, 0.5);
        transform: translateY(-3px);
        box-shadow: 0 0 16px rgba(30, 70, 40, 0.7);
      }
      .button-list a span {
        display: flex;
        align-items: center;
        gap: 0.6rem;
      }
      .arrow-icon svg {
        font-size: 1.2em;
        transition: transform 0.2s;
      }
      .button-list a:hover .arrow-icon svg {
        transform: translateX(6px);
      }

      .footer {
        margin-top: 2rem;
        font-size: 0.85rem;
        color: #d4f5c8;
      }

      @media (max-width: 480px) {
        h1    { font-size: 1.8rem; }
        p     { font-size: 0.95rem; }
        .logo { width: 90px; height: 90px; }
        .card { padding: 2rem 1.5rem; }
        .button-list a {
          font-size: 0.95rem;
          padding: 0.9rem 1.1rem;
        }
      }
    </style>
  </head>

  <body>
    <!-- Preloader Overlay -->
    <div id="preloader">
      <img src="/assets/emlogo.png" alt="Empress Matcha Logo" />
    </div>

    <!-- Main Card -->
    <div class="card">
      <img src="/assets/logo.webp" alt="Empress Matcha Logo" class="logo" loading="lazy" />
      <h1>Empress Matcha</h1>
      <p>Royalty in every cup</p>

      <div class="button-list">
        {links.map(link => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Open ${link.text}`}
          >
            <span>
              <Icon name={link.icon} width="20px" height="20px" />
              {link.text}
            </span>
            <span class="arrow-icon">
              <Icon name="mdi:arrow-right" width="20px" height="20px" />
            </span>
          </a>
        ))}
      </div>

      <div class="footer">Empress Matcha © {new Date().getFullYear()}</div>
    </div>

    <!-- Hide preloader after load -->
    <script type="module">
      window.addEventListener("load", () => {
        const pre = document.getElementById("preloader");
        setTimeout(() => {
          pre.classList.add("hidden");
          pre.addEventListener("transitionend", () => pre.remove(), { once: true });
        }, 3000);
      });
    </script>
  </body>
</html>
